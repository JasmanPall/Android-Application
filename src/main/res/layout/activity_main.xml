<?xml version="1.0" encoding="utf-8"?>

    <!-- Linear layout start here -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ScrollView01"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/floor"
    android:fadingEdge="horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Get Ready To know Your Fitness Level"
        android:textColor="#808080"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:text="AGE"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:typeface="serif" />


    <EditText
        android:id="@+id/et3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint=" In Years "
        android:textColor="@android:color/white"
        android:textColorHint="#808080"
        android:fadingEdgeLength="10dp"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:text="WEIGHT (In Pounds)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:typeface="serif" />


    <EditText
        android:id="@+id/et1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="1 Kg=2.20 lb"
        android:textColor="@android:color/white"
        android:textColorHint="#808080"
        android:ems="10"
        android:fadingEdgeLength="10dp"
        android:inputType="numberDecimal"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:text="HEIGHT (In Inches)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:typeface="serif" />


    <EditText
        android:id="@+id/et2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="1 ft = 12 in"
        android:fadingEdgeLength="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="#808080"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_width="110dp"
        android:textAlignment="center">
    </EditText>


    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <Button
        android:id="@+id/ib1"
        android:layout_width="158dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:fadingEdge="vertical"
        android:longClickable="true"
        android:nextFocusRight="@color/colorPrimaryDark"
        android:text="Calculate"
        android:visibility="visible" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text=""
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"/>




    <TableLayout
        android:id="@+id/tabla_cuerpo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TextView
            android:id="@+id/tv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="BMI RANGE"
            android:textColor="#FFFF00"
            android:textSize="18sp"
            android:layout_weight="0.06" />

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder"
            >



            <TextView
                android:id="@+id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="Very Severely Underweight"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />


            <TextView
                android:id="@+id/tv111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="1dp"
                android:paddingTop="10dp"
                android:text=" 0 - 15"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder">

            <TextView
                android:id="@+id/tv12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="Severely Underweight"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />



            <TextView
                android:id="@+id/tv122"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="1dp"
                android:paddingTop="10dp"
                android:text=" 16 - 17"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder">


            <TextView
                android:id="@+id/tv13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="Underweight"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />

            <TextView
                android:id="@+id/tv133"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="1dp"
                android:paddingTop="10dp"
                android:text=" 17 - 18.5"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder">

            <TextView
                android:id="@+id/tv14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="Normal"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />

            <TextView
                android:id="@+id/tv144"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="1dp"
                android:paddingTop="10dp"
                android:text=" 18.5 - 25"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />
        </TableRow>



        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder">

            <TextView
                android:id="@+id/tv15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="Over Weight"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />

            <TextView
                android:id="@+id/tv155"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="1dp"
                android:paddingTop="10dp"
                android:text=" 25 - 30"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder">

            <TextView
                android:id="@+id/tv16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="Obese Class I"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />

            <TextView
                android:id="@+id/tv166"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="1dp"
                android:paddingTop="10dp"
                android:text=" 30 - 35"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder">


            <TextView
                android:id="@+id/tv17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="Obese Class II"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />

            <TextView
                android:id="@+id/tv177"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="1dp"
                android:paddingTop="10dp"
                android:text=" 35 - 40"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tableborder">

            <TextView
                android:id="@+id/tv18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="Obese Class III"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06" />

            <TextView
                android:id="@+id/tv188"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="1dp"
                android:paddingTop="10dp"
                android:text=" 40 +"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_weight="0.06"
                android:paddingBottom="10dp"/>
        </TableRow>

    </TableLayout>



    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:paddingTop="27dp"
        android:text=" Made by JASMAN SINGH "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="10sp"/>

    <View

        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


</LinearLayout>
</ScrollView>